{% extends '::frontend.html.twig' %}
{% block id 'usuari' %}
{% block title %}Registrat com a usuari{% endblock %}
{% block article %}

	<br style="clear:both"/>
	<br style="clear:both"/>
	<br style="clear:both"/>
	<br style="clear:both"/>
	<br style="clear:both"/>
	<br style="clear:both"/>
